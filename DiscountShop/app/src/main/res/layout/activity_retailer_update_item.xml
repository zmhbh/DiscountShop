<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.ravi.disco.RetailerUpdateItem">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:contentDescription="Item"
                android:textSize="30sp"
                android:textColor="#572626"
                android:gravity="center"
                android:text="Cheese Cake"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:textSize="25sp"
                android:gravity="left"
                android:contentDescription="Price"
                android:text="New Price"
                android:textColor="#000066"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/item"
                />
            <EditText
                android:id="@+id/editprice"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="25sp"
                android:gravity="left"
                android:contentDescription="Price"
                android:text="10$"
                android:textColor="#000066"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/price"
                />

            <ImageView
                android:layout_width="375dp"
                android:layout_height="320dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="75dp"
                android:baselineAlignBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="150dp"
                android:contentDescription="@string/productImage"
                android:src="@drawable/cheesecake"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:id="@+id/imageView" />

            <Button
                android:id="@+id/save_btn"
                android:text="@string/save"
                android:textColor="#CBD4CB"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_below="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/save_button"
                android:shadowColor="#707070"
                android:shadowDx="0"
                android:shadowDy="0"
                android:layout_marginLeft="10dp"
                android:shadowRadius="5"
                />

            <Button
                android:id="@+id/del_btn"
                android:text="@string/delete"
                android:textColor="#CBD4CB"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/save_button"
                android:shadowColor="#707070"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:onClick="deleteItem" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
